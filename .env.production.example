# Production Environment Variables Template
# Copy this to .env.production or set these in your hosting platform

# Database Configuration (Production)
DATABASE_URL=postgresql://user:password@host:port/database
# OR use individual components:
DB_USER=your_prod_db_user
DB_PASSWORD=your_prod_db_password
DB_HOST=your_prod_db_host
DB_PORT=5432
DB_NAME=your_prod_db_name

# Application URL (CRITICAL - Update this!)
SERVER_URL=https://yourdomain.com

# Clerk Authentication (Production Keys)
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_publishable_key
CLERK_SECRET_KEY=sk_live_your_production_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# UploadThing (Production)
UPLOADTHING_TOKEN=your_production_uploadthing_token

# AI Services
ANTHROPIC_API_KEY=your_production_anthropic_key
GEMINI_API_KEY=your_production_gemini_key

# Email Service (Production)
RESEND_API_KEY=your_production_resend_key

# Inngest (Production)
INNGEST_CLIENT_ID=hire-sync-ai
INNGEST_SIGNING_KEY=signkey_your_production_signing_key
INNGEST_EVENT_KEY=your_production_event_key